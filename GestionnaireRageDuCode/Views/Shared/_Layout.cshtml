<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Timothé Provost et Alexandre Constant" />
    <meta http-equiv="content-type" content="text/css" />
    <title>@ViewData["Title"] - Rage du Code</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="nav">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand" id="navLogo"><img src="~/images/logo.png" style="margin:auto" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index" id="navnav"><b>Accueil</b></a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About" id="navnav"><b>À propos</b></a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact" id="navnav"><b>Contact</b></a></li>
                    <li><a asp-area="" asp-controller="Forum" asp-action="Forum" id="navnav"><b>Forum</b></a></li>
                    <li><a asp-area="" asp-controller="Membres" asp-action="Membres" id="navnav"><b>Membres</b></a></li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" id="body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li id="footnavCR"><p><b>&copy; 2016 - Les Bidouilleurs  SATANIQUES</b> </p></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index" id="footli">Accueil</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About" id="footli">À propos</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact" id="footli">Contact</a></li>
                    <li><a asp-area="" asp-controller="Forum" asp-action="Forum" id="footli">Forum</a></li>
                    <li><a asp-area="" asp-controller="Membres" asp-action="Membres" id="footli">Membres</a></li>
                </ul>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
